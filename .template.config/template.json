{
  "$schema": "http://json.schemastore.org/template",
  "author": "schnow265",
  "classifications": ["Console", "Serilog", "Logging"],
  "identity": "schnow265.SerilogConsole",
  "name": "Serilog Console Template",
  "shortName": "ConsoleLogger",
  "tags": {
    "language": "C#",
    "type": "project"
  },
  "sourceName": "SerilogConsole",
  "preferNameDirectory": true,
  "description": "A .NET template for console applications with Serilog integration",
  "symbols": {
    "Framework": {
      "type": "parameter",
      "datatype": "choice",
      "choices": [
        {
          "choice": "net9.0",
          "description": ".NET 9.0"
        },
        {
          "choice": "net8.0",
          "description": ".NET 8.0"
        }
      ],
      "defaultValue": "net9.0",
      "description": "The target framework for the project."
    }
  },
  "primaryOutputs": [
    {
      "path": "SerilogConsole.csproj"
    }
  ]
}
